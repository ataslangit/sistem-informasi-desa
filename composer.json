{
  "name": "ataslangit/sistem-informasi-desa",
  "require": {
    "php": ">=7.4",
    "codeigniter/framework": "^3",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "codeigniter/coding-standard": "^1.1",
    "filp/whoops": "^2.15",
    "mikey179/vfsstream": "1.6.*",
    "rector/rector": "0.18.3"
  },
  "autoload": {
    "psr-4": {
      "App\\Controllers\\": "donjo-app/controllers/",
      "App\\Libraries\\": "donjo-app/Libraries/",
      "App\\Models\\": "donjo-app/models/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4.33"
    },
    "preferred-install": "dist",
    "sort-packages": true,
    "vendor-dir": "donjo-sys"
  },
  "scripts": {
    "csfix": [
      "./donjo-sys/bin/rector process",
      "./donjo-sys/bin/php-cs-fixer fix"
    ],
    "update-resources": "git submodule update --init --remote resources"
  }
}

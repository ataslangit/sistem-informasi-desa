{
    "name": "ataslangit/sistem-informasi-desa",
    "type": "project",
    "description": "Sistem Informasi Desa untuk memajukan desa menjadi pelopor desa digital",
    "homepage": "https://ataslangit.github.io/sistem-informasi-desa",
    "license": "GPL-3.0",
    "require": {
        "php": "^7.3 || ^8.0",
        "codeigniter4/framework": "^4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "suggest": {
        "ext-fileinfo": "Improves mime type detection for files"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
